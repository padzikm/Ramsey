<Application x:Class="ShurOnline.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ShurOnline"
             xmlns:converters="clr-namespace:ShurOnline.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
        <converters:BoolToBorderColourConverter x:Key="BoolToBorderColourConverter" />
        <converters:CurrentTurnToTitleConverter x:Key="CurrentTurnToTitleConverter" />
    </Application.Resources>
</Application>
